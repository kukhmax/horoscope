    "name": "Django",
    "type": "python",
    "request": "launch",
    "stopOnEntry": false,
    "python": "${config.python.pythonPath}",
    "program": "${workspaceRoot}/poetry run python manage.py",
    "args": [
        "runserver",
        "--no-color",
        "--noreload"
    ],
    "debugOptions": [
        "WaitOnAbnormalExit",
        "WaitOnNormalExit",
        "RedirectOutput",
        "DjangoDebugging"
    ],
    "configurations": [
        
        {
            "name": "Python: Django",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}\\manage.py",
            "args": [
                "runserver"
            ],
            "django": true
        }
    ]
}